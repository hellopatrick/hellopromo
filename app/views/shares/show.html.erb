<div class="well">
  <h2>
    <%= @share.title %> 
    <small>&mdash; <%= link_to @share.owner.name, "http://twitter.com/#{@share.owner.nickname}" %></small>
  </h2>
  <hr>
  <%= @share.description_html.html_safe %>
  <hr>
  <h4>URL: <%= link_to @share.url, @share.url %></h4>
